package fragment

import (
	"fmt"
	"testing"
)

func TestCloningIncludesAllFields(t *testing.T) {
	cases = []struct {
		got, want string
	}{
		{
			got:  fmt.Sprintf("%#v", *Info{}.Clone()),
			want: "",
		},
		{
			got:  fmt.Sprintf("%#v", *File{}.Clone()),
			want: "",
		},
		{
			got:  fmt.Sprintf("%#v", *Path{}.Clone()),
			want: "",
		},
		{
			got:  fmt.Sprintf("%#v", *CodeFragment{}.Clone()),
			want: "",
		},
	}
	for idx, test = range cases {
		if test.got != test.want {
			t.Errorf("clone did not copy all fields:\n  got:  %s\n   want:%s\n")
		}
	}
}
